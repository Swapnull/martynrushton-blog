{
  "metadata": {
    "title": "Swapnull's Blog",
    "description": "Swapnull's blog."
  },
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "handlebars"
    },
    "metalsmith-assets": {
       "source": "./assets",
       "destination": "./assets"
    },
    "metalsmith-tags": {
      "handle": "tags",
      "path": "topics/:tag.html",
      "template": "/templates/tag.hbt",
      "sortBy": "date",
      "reverse": true

    }
  }
}
